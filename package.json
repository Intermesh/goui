{
  "type": "module",
  "main": "build/goui.js",
  "module": "build/goui.js",
  "types": "build/goui.d.ts",
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.2",
    "barrelsby": "^2.3.4",
    "chai": "^4.3.4",
    "esbuild": "^0.14.49",
    "http-server": "^14.1.0",
    "jsdom": "^18.0.0",
    "jsdom-global": "^3.0.2",
    "material-icons": "^1.10.11",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0"
  },
  "scripts": {
    "test": "mocha",
    "start": "npm-run-all --parallel watch:tsc watch:sass http-server --print-label ",
    "watch:tsc": "tsc --watch",
    "watch:sass": "sass --watch style:style",
    "http-server": "http-server",
    "build": "npm-run-all build:tsc build:sass --print-label",
    "build:tsc": "tsc --project tsconfig.production.json",
    "build:sass": "sass --style=compressed style:style",
    "barrel": "barrelsby --delete --config barrelsby.json",
    "bundle": "esbuild script/goui.ts --bundle --minify --sourcemap --format=esm --target=esnext --outdir=build",
    "ts-types": " tsc --project tsconfig.production.json"
  }
}
