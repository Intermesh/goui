{
  "type": "module",
  "main": "build/goui.js",
  "module": "build/goui.js",
  "types": "build/goui.d.ts",
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.2",
    "chai": "^4.3.4",
    "esbuild": "^0.14.49",
    "jsdom": "^18.0.0",
    "jsdom-global": "^3.0.2",
    "material-icons": "^1.10.11",
    "mocha": "^6.2.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "test": "mocha",

    "start": "npm-run-all start:watch start:serve-examples start:sass --print-label ",
    "start:watch": "tsc --watch",
    "start:serve-examples": "esbuild examples/Index.ts --bundle --serve=localhost:8081 --servedir=. --external:./dist/* --external:./script/*  --sourcemap --format=esm --target=esnext --outdir=examples",
    "start:sass": "sass --watch style:dist",

    "build": "npm-run-all build:clean build:sass build:ts --print-label",
    "build:clean": "rimraf dist",
    "build:sass": "sass --style=compressed style:dist",
    "build:ts": "tsc"
  }
}
