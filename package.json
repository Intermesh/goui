{
  "type": "module",
  "main": "build/goui.js",
  "module": "build/goui.js",
  "types": "build/goui.d.ts",
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.2",
    "barrelsby": "^2.3.4",
    "chai": "^4.3.4",
    "esbuild": "^0.14.49",
    "http-server": "^14.1.0",
    "jsdom": "^18.0.0",
    "jsdom-global": "^3.0.2",
    "material-icons": "^1.10.11",
    "mocha": "^6.2.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.76.0",
    "rollup-plugin-dts": "^4.2.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "test": "mocha",
    "start": "npm-run-all --parallel watch:tsc watch:tsc-examples watch:sass --print-label ",
    "watch:tsc": "esbuild script/goui.ts --bundle --serve=localhost:8081 --sourcemap --format=esm --target=esnext --outdir=build --servedir=.",
    "watch:tsc-examples": "esbuild examples/Index.ts --bundle --watch --external:../build/* --external:../script/*  --sourcemap --format=esm --target=esnext --outdir=examples",
    "watch:sass": "sass --watch style:build",
    "build": "npm-run-all build:clean build:sass build:ts build:bundle-types --print-label",
    "build:clean": "rimraf build",
    "build:sass": "sass --style=compressed style:build",
    "build:types": " tsc --project tsconfig.types.json",
    "build:ts": "esbuild script/goui.ts --bundle --minify --sourcemap --format=esm --target=esnext --outdir=build",
    "build:bundle-types": "rollup -c",
    "barrel": "barrelsby --config barrelsby.json && sed -i .bak 's/\\\";/.js\\\";/' script/goui.ts && rm script/goui.ts.bak"
  }
}
