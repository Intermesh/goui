{
  "type": "module",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "chai": "^4.3.7",
    "esbuild": "^0.16.17",
    "jsdom": "^21.0.0",
    "jsdom-global": "^3.0.2",
    "material-icons": "^1.13.1",
    "mocha": "^10.2.0",
    "sass": "^1.57.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "test": "mocha",
    "start": "npm run build:clean && npm run start:parallel",
    "start:parallel": "npm run start:watch & npm run start:sass",
    "start:watch": "npx tsc --watch -p ./tsconfig.build.json",
    "start:sass": "npx sass --watch ./style:./dist",
    "serve": "npx esbuild ./examples/Index.ts --bundle --serve=localhost:8081 --servedir=. --external:./dist/* --external:./script/*  --sourcemap --format=esm --target=esnext --outdir=examples",
    "buildexamples": "npx esbuild ./examples/Index.ts --bundle --external:./dist/* --external:./script/*  --sourcemap --format=esm --target=esnext --outdir=examples/dist",
    "build": "npm run build:clean && npm run build:sass && npm run build:ts",
    "build:clean": "rm -rf ./dist/*",
    "build:sass": "npx sass --style=compressed ./style:./dist",
    "build:ts": "tsc -p ./tsconfig.build.json"
  }
}
