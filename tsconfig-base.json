{
  "compilerOptions": {
    "strict" : true,
    "target": "ES2017",
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "module":"es2020",
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./build/*"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "build", "**/node_modules", "**/.*/"
  ]
}
